{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true,
        "cypress/globals" : true
    },
    "settings": {
        "react" : {
            "version" : "detect"
        }
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react", "jest", "cypress"
    ],
    "rules": {
        "react/react-in-jsx-scope" : "off",
        "end-of-line":"auto"
    }
}

